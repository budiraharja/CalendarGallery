<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview_selector"
    android:orientation="vertical"
    android:padding="3dp" >

    <LinearLayout
        android:id="@+id/calendar_day_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight=".1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp" >

        <TextView
            android:id="@+id/calendar_day_gridcell"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/thumbImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/calendar_day_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbImage"
            android:layout_alignRight="@+id/thumbImage"
            android:alpha=".5"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textColor="@color/lite_blue"
            android:textSize="7sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>